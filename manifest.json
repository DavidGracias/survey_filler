{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "Survey Filler",
    "description": "This is a Chrome extension built with React and TypeScript",
    "action": {
        "default_title": "Click to open panel"
    },
    "side_panel": {
        "default_path": "js/index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "sidePanel"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}